[MASTER]

ignore=tests/
ignore-patterns=.*_test\.py

[MESSAGE CONTROL]

disable=raw-checker-failed,
        bad-inline-option,
        locally-disabled,
        file-ignored,
        suppressed-message,
        useless-suppression,
        deprecated-pragma,
        use-symbolic-message-instead,
        missing-module-docstring,
        missing-function-docstring,
        missing-class-docstring

[FORMAT]
max-nested-blocks=2
max-line-length=80

[REFACTORING]
max-statements=15
max-branches=8

[DESIGN]